<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vforest.yeah.vforest.activity.MainActivity">


    <FrameLayout
        android:id="@+id/fragmentlayout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_wetland"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/button_wetland"
            android:scaleType="centerInside"
            android:background="#00000000"
            />
        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_explore"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/button_explore"
            android:scaleType="centerInside"
            android:background="#00000000"
            />
        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_myself"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/button_myself"
            android:scaleType="centerInside"
            android:background="#00000000"
            />
    </LinearLayout>

</LinearLayout>
